 
 <h1 class="signup-title pt-2">Sign up your Account Now</h1>
    <form id = "signup-form" class="pt-5 text-center" action = "signup" method = "POST">
        <div class="form-group-firstname">
            <label for="firstNameSignUp">Enter Your First Name Here</label>
            <input type="text" class="form-control" id="firstNameSignUp" name="firstName" placeholder="First Name" value="{{userInfo.firstName}}">
        </div>
        <div class="form-group-lastnameSignUp">
            <label for="lastNameSignUp">Enter Your Last Name here!</label>
            <input type="text" class="form-control" id="lastNameSignUp" name="lastName" placeholder="Last Name" value="{{userInfo.lastName}}">
        </div>
        <div class="form-group-username">
            <label for="usernameSignUp">Enter Your Username Here</label>
            <input type="text" class="form-control" id="usernameSignUp" name="username" placeholder="Username" value="{{userInfo.username}}">
        </div>
        <div class="form-group-password">
            <label for="passwordSignUp">Enter Your Password here!<br/> (At least 8 characters, 1 capital letter, and 1 number)</label>
            <input type="password" class="form-control" id="passwordSignUp" name="password" placeholder="Password">
        </div>
        <div class="form-group-email">
            <label for="emailSignUp">Enter Your E-Mail Here!</label>
            <input type="text" class="form-control" id="emailSignUp" name="email" placeholder="E-mail Address" value="{{userInfo.email}}">
        </div>
         <div class="form-group-email">
            <label for="emailSignUp">Enter Your Phome Here!</label>
            <input type="text" class="form-control" id="phoneNumberSignUp" name="phoneNumber" placeholder="Phone Number" value="{{userInfo.phoneNumber}}">
        </div>
        <div class="form-group-birthday">
            <label for="dateOfBirthSignUp">Enter Your Birthday Here</label>
            <input type="date" class="form-control" id="dateOfBirthSignUp" name="dateOfBirth" value="{{userInfo.dateOfBirth}}">
        </div>
        <div class="text-center text-lg-start mt-2 pt-2 pb-5">
            <button type="submit" class="btn btn-primary btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;" value="Submit">Login</button>
        </div>
        {{!-- <input type="submit" class="btn btn-default" value = "Submit"> --}}
    </form>
    <script src="/public/js/signup.js"></script>
